<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/plant_detail_row_plant_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plant_default_image"
        android:layout_marginEnd="5dp"
        />
    <TextView
        android:layout_toRightOf="@id/plant_detail_row_plant_image"
        android:id="@+id/plant_detail_row_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Plant Name"
        android:textSize="20sp"
        android:layout_marginEnd="5dp"
        />
    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/plant_detail_row_watering_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watering_s"
        android:textSize="20sp"
        />

</RelativeLayout>